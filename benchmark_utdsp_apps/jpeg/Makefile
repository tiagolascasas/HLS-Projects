.SILENT:
.IGNORE:
CC = /gnu/bin/gcc
SHELL = /bin/csh
TAG = "-----"

#
# Targets for setting up input file for coder and symbolic link for output
# of decoder.
#
setup:
	ln -s ../Original/input.dsp Aexpand/input.dsp
	ln -s ../Aexpand/output.sun Bfilter/input.dsp
	ln -s ../Bfilter/output.sun Csqueeze/input.dsp

#
# Internal checks to ensure that outputs of encoder and decoder match
# corresponding outputs generated by original code copied from the network.
#
validate:
	echo " "
	echo "$(TAG) Internally VALIDATing `pwd`"
	cd Original ; make filter ; ./filter < input.dsp >! output.dsp
	cmp Csqueeze/output.sun Original/output.dsp
	echo "$(TAG) DONE"
